# ============================================================================
# VendHub Client (Mini App) Environment Variables
# Copy to .env.local and fill in your values
# ============================================================================

# ============================================================================
# API Configuration
# ============================================================================
VITE_API_URL=http://localhost:4000
VITE_WS_URL=ws://localhost:4000

# ============================================================================
# Telegram Configuration
# ============================================================================
VITE_TELEGRAM_BOT_NAME=VendHubBot
VITE_TELEGRAM_BOT_URL=https://t.me/VendHubBot

# ============================================================================
# Application Settings
# ============================================================================
VITE_APP_ENV=development
# VITE_APP_ENV=production
VITE_APP_NAME=VendHub
VITE_APP_VERSION=1.0.0

# ============================================================================
# Google Maps (optional)
# ============================================================================
VITE_GOOGLE_MAPS_API_KEY=

# ============================================================================
# Feature Flags
# ============================================================================
VITE_FEATURE_LOYALTY=true
VITE_FEATURE_QUESTS=true
VITE_FEATURE_REFERRALS=true
VITE_FEATURE_QR_SCANNER=true

# ============================================================================
# Analytics (optional)
# ============================================================================
VITE_GA_ID=
VITE_SENTRY_DSN=

# ============================================================================
# PWA Settings
# ============================================================================
VITE_PWA_NAME=VendHub
VITE_PWA_SHORT_NAME=VendHub
VITE_PWA_THEME_COLOR=#6B4423
VITE_PWA_BACKGROUND_COLOR=#FFF8F0
